{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

             {
            "name": "Debug Reverse Text - DeepSpeed Single GPU",
            "type": "debugpy",
            "request": "launch",
            "module": "accelerate.commands.launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "1",
                "PYTHONPATH": "${workspaceFolder}",
                "WANDB_MODE": "disabled",
                "TOKENIZERS_PARALLELISM": "false",
                "PYTORCH_CUDA_ALLOC_CONF": "max_split_size_mb:512",
                "NCCL_P2P_DISABLE": "1"
            },
            "args": [
                "--num-processes", "1",
                "--config-file", "configs/zero3_single_gpu.yaml",
                "verifiers/examples/reverse_text.py"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "subProcess": true
        },
        {
            "name": "Debug Wordle Eval",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/verifiers/examples/benchmark/wordle_eval.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "TOKENIZERS_PARALLELISM": "false"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "Debug SFT Wordle (Python)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/verifiers/examples/sft/wordle.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "PYTHONPATH": "${workspaceFolder}",
                "WANDB_MODE": "disabled",
                "TOKENIZERS_PARALLELISM": "false"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        }
    ]
}